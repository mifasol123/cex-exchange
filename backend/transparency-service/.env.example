# Transparency Service Environment Configuration

# Service Configuration
PORT=8081
SERVICE_VERSION=0.1.0-dev
GIN_MODE=release

# Database Configuration (for future use)
DATABASE_URL=postgres://cex:cexpass@localhost:5432/cex_main?sslmode=require
DATABASE_MAX_CONNECTIONS=10
DATABASE_MAX_IDLE=5

# Security Configuration
CORS_ORIGINS=*
MAX_REQUEST_SIZE=1MB
REQUEST_TIMEOUT=30s

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_BATCH_SIZE=1000

# Compliance Configuration
POR_VERIFICATION_INTERVAL=24h
SYSTEM_STATUS_CACHE_TTL=300s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json