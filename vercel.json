{
  "version": 2,
  "name": "cex-exchange",
  "builds": [
    {
      "src": "frontend/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/web/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://cex-backend-production.up.railway.app",
    "NEXT_PUBLIC_WS_URL": "wss://cex-backend-production.up.railway.app"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
